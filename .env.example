# Database (used by docker-compose)
POSTGRES_PASSWORD=secretpassword

# Authentication
JWT_SECRET=your-secret-key-at-least-32-characters-long

# Admin seed account (created on first startup)
ADMIN_EMAIL=admin@samlet.local
ADMIN_PASSWORD=herervisamlet

# Application
APP_NAME=Samlet
BASE_URL=http://localhost:3000

# Storage
UPLOAD_DIR=./uploads
BACKUP_DIR=./backups

# Logging
# Log level: trace, debug, info, warn, error, fatal (default: info)
LOG_LEVEL=info
# Log directory for daily-rotated files. Empty = stdout only.
LOG_DIR=

# Email (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@samlet.local
NUXT_PUBLIC_SMTP_ENABLED=false

# WebAuthn (Passkeys)
WEBAUTHN_RP_ID=localhost
WEBAUTHN_ORIGIN=http://localhost:3000

# Error webhook (POST with JSON on failures)
WEBHOOK_URL=

# Cloudflare Turnstile (bot protection on login)
# Leave empty to disable Turnstile verification
TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=
# Widget appearance (default: interaction-only) - Mostly for debugging
#   always           — widget is always visible, shows checkmark when verified
#   execute          — widget is invisible, only appears during active verification
#   interaction-only — widget is invisible, only appears if user interaction is needed
TURNSTILE_APPEARANCE=interaction-only
# Widget theme: light, dark, auto (default: auto)
TURNSTILE_THEME=auto

# Cloudflare Tunnel (docker-compose only)
CLOUDFLARE_TUNNEL_TOKEN=
